<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/chat_right_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:textSize="12sp"
        android:text="2015/5/6   12:10:13"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/right_bubble"
            android:layout_below="@+id/chat_right_name"
            android:layout_toStartOf="@+id/chat_right_image"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="50dp">

            <TextView
                android:id="@+id/chat_right_message"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:textSize="16sp"
                android:text="我是个颜值主播" />

        </LinearLayout>

        <ImageView
            android:id="@+id/chat_right_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/avatar2"/>

        <TextView
            android:id="@+id/chat_right_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/chat_right_image"
            android:layout_marginEnd="10dp"
            android:text="吴彦祖"
            android:textSize="14sp" />

    </RelativeLayout>

</LinearLayout>