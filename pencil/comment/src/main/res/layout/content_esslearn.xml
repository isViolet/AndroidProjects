<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/note_drawer_ess"
    tools:context=".essLearn_Content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/esscontent_bottomline">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/esscontent_title"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="台州美食之旅——蛋清羊尾"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/esscontent_comefrom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="浙里台美"/>
                        <TextView
                            android:id="@+id/esscontent_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2019-05-01"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/esscontent_ima"
                    android:layout_width="match_parent"
                    android:src="@drawable/ess_eat_ima01"
                    android:layout_height="30dp" />
                <TextView
                    android:id="@+id/esscontent_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="dsadsdasdasdasdassdasdasd"/>
            </LinearLayout>
        </ScrollView>
        <com.example.comment.Eduction_Cell
            android:id="@+id/esscontent_bottomline"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="35dp">
        </com.example.comment.Eduction_Cell>
    </RelativeLayout>
    <!--笔记侧滑栏-->
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start|left"
        android:orientation="vertical"
        android:background="#FFFFFF">
        <!--笔记显示区域-->
        <LinearLayout
            android:id="@+id/note_showarea_ess"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="笔记区域"
                />
            <ScrollView
                android:layout_marginTop="7dp"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circular_button3">
                <TextView
                    android:id="@+id/note_list_ess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </ScrollView>
        </LinearLayout>
        <!--笔记输入区域-->
        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/note_title_ess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入笔记标题"
                />
            <EditText
                android:id="@+id/note_content_ess"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入笔记内容"
                />
            <Button
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/note_submit_ess"
                android:background="@drawable/circular_button3"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:text="提交"
                />
        </LinearLayout>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>