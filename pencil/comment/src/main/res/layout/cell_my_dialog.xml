<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/circular_button3"
    tools:context=".MyDialog">
    <RelativeLayout
        android:id="@+id/dialog_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialogcancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/dialogsubmit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提问"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <EditText
        android:id="@+id/et_input"
        android:layout_below="@+id/dialog_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入您的问题"
        android:background="@drawable/edittext_selector"
        android:focusable="true"
        android:focusableInTouchMode="true"/>
</RelativeLayout>