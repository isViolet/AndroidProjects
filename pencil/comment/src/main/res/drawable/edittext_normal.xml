<?xml version="1.0" encoding="UTF-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景色 -->
    <solid android:color="#FFFFFF" />
    <!-- android:radius 弧形的半径 -->
    <corners android:radius="3dip"/>
    <!-- 边框的宽度和颜色颜色 -->
    <stroke
        android:width="1dip"
        android:color="#BDC7D8" />
    <!-- padding：Button里面的文字与Button边界的间隔 -->
    <padding
        android:left="@dimen/small_padding_Horizontal"
        android:top="@dimen/small_padding_Horizontal"
        android:right="@dimen/small_padding_Horizontal"
        android:bottom="@dimen/small_padding_Horizontal"
        />
</shape>
