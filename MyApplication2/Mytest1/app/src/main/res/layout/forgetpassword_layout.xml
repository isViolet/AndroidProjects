<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg4"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".login.forget.ForgetPasswordActivity">

        <RelativeLayout
            android:id="@+id/rl_loginactivity_top"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_loginactivity_back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_left_back"
                    android:backgroundTint="#F59265"
                    android:clickable="true"
                    android:onClick="onClick"
                    tools:ignore="OnClick" />

                <TextView
                    android:id="@+id/tv_loginactivity_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/iv_loginactivity_back"
                    android:text="Back"
                    android:textColor="#F59265"
                    android:textSize="20dp"
                    android:textStyle="bold|italic" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重置密码"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="30sp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/shap"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_now"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#ffffff"
                            android:hint="旧密码"
                            android:maxLength="15"
                            android:paddingLeft="6dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:singleLine="true"
                            android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_new"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#ffffff"
                            android:hint="新密码"
                            android:maxLength="15"
                            android:paddingLeft="6dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:singleLine="true"
                            android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_new_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#ffffff"
                            android:hint="再次输入新密码"
                            android:maxLength="15"
                            android:paddingLeft="6dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:singleLine="true"
                            android:textSize="18sp" />
                </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

                <com.example.myapplication.login.waterbutton.MyButton
                    android:id="@+id/btn_update_password"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/selector_loginactivity_button"
                    android:text="确认"
                    android:alpha="0.8"
                    android:textColor="@android:color/white" />
        </RelativeLayout>

</LinearLayout>